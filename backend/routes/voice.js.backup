function isRepeatRequest(text) {
  if (!text) return false;
  const lower = text.toLowerCase();
  return repeatKeywords.some(k => lower.includes(k));
}

function isPauseRequest(text) {
  if (!text) return false;
  const lower = text.toLowerCase();
  return pauseKeywords.some(k => lower.includes(k));
}

