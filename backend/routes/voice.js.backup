  // Then check "Onsite"
  const onsiteKeywords = jobLocationKeywords['Onsite'];
  for (const keyword of onsiteKeywords) {
    if (textLower.includes(keyword.toLowerCase())) {
      console.log(`âœ“ Job Location: Onsite (matched: "${keyword}")`);
